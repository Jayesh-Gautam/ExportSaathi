# ExportSathi Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=ExportSathi
DEBUG=False
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS Bedrock
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_TEMPERATURE=0.7
BEDROCK_MAX_TOKENS=4096

# AWS Textract
TEXTRACT_ENABLED=True

# AWS Comprehend
COMPREHEND_ENABLED=True

# AWS S3 Buckets
S3_KNOWLEDGE_BASE_BUCKET=exportsathi-knowledge-base
S3_PRODUCT_IMAGES_BUCKET=exportsathi-product-images
S3_GENERATED_DOCS_BUCKET=exportsathi-generated-docs

# AWS RDS PostgreSQL
DATABASE_URL=postgresql://exportsathi_user:your_password@your-rds-endpoint.region.rds.amazonaws.com:5432/exportsathi
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Groq API (Alternative LLM)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=mixtral-8x7b-32768
USE_GROQ=False

# Vector Store
VECTOR_STORE_TYPE=faiss
FAISS_INDEX_PATH=./data/faiss_index
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# File Upload
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/jpg"]

# Redis (Optional for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=False
